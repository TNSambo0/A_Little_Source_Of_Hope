@model News
@{
    ViewData["Title"] = "Create NewsLetter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h4 class="sub-title">Create a Newsletter</h4>
            </div>
            <div class="card-block">
                <form method="post" enctype="multipart/form-data">
                    <div class='row'>
                        <div class='col-sm-6'>
                            <div class='container'>
                                <div class='form-group'>
                                    <label asp-for='Heading' class='form-label'></label>
                                    <input asp-for='Summary' class='form-control' aria-required='true' />
                                    @*<span asp-validation-for='' class='text-danger'></span>*@
                                    <textarea rows="3" placeholder="Enter the newsletter" asp-for="Description" class="mb-0"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>

                                </div>
                               @* <div class="form-group">
                                    <textarea rows="3" placeholder="Enter your message" asp-for="Message" class="mb-0"></textarea>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>*@
                            </div>
                            <div class="btn-group ml-3 mb-3">
                                <button type="submit" class="btn btn-primary" id="btn_create">Submit</button>
                                <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                        @*<div class="col-sm-6">
                            <div class="container mb-2" id="container-canvImg"> 
                                <div class="Category_img_icon_div">
                                    <img class="CategoryImagePreview" src="~/images/icons/Grey.jpg" />
                                </div>
                                <input asp-for="File" type="file" id="CategoryImageInput" multiple="false" accept="Image/*" class="d-none upload_inputfile">
                                <span asp-validation-for="File" class="text-danger"></span>
                            </div>
                        </div>*@
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(".Category_img_icon_div").on("click", function () {
        $("#CategoryImageInput").click();
    });
    $("#CategoryImageInput").on("change", function () {
        if ($(this)[0].files[0] != null) {
            $(".CategoryImagePreview").attr("src", URL.createObjectURL($(this)[0].files[0]));
        }
    });
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}