@model News
@{
    ViewData["Title"] = "Create NewsLetter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h4 class="sub-title">Create a Newsletter</h4>
            </div>
            <div class="card-block">
                <form method="post" enctype="multipart/form-data">
                    <div class='row'>
                        <div class='col-sm-6'>
                            <div class='container'>
                                <div class='form-group'>
                                    <label asp-for='Heading' class='form-label'></label>
                                    <input asp-for='Heading' class='form-control' aria-required='true' />
                                    <span asp-validation-for='Heading' class='text-danger'></span>
                                </div>
                                <div class='form-group'>
                                    <label asp-for='Summary' class='form-label'></label>
                                    <input asp-for='Summary' class='form-control' aria-required='true' />
                                    <span asp-validation-for='Summary' class='text-danger'></span>
                                </div>
                                <div class='form-group'>
                               
                                    <label asp-for='Description' class='form-label'></label>
                                    <textarea rows="6"  placeholder="Enter a newsletter" asp-for="Description" class="form-control"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class='form-group'>
                                    <label asp-for='CreatedDate' class='form-label'></label>
                                    <input asp-for='CreatedDate' class='form-control' aria-required='true' />
                                    <span asp-validation-for='CreatedDate' class='text-danger'></span>
                                </div>
                            </div>
                            <div class="btn-group ml-3 mb-3">
                                <button type="submit" class="btn btn-primary" id="btn_create">Submit</button>
                                <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}