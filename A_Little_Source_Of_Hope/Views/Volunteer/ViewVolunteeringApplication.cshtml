@model IEnumerable<Volunteer>
@{
    ViewData["Title"] = "Volunteering Applications";
}
<div class="p-4">
    @if (ViewData["VApplications"] != null)
    {
        <div class="d-flex mb-2">
            <h2>Volunteering Application List</h2>
            <a asp-action="VolunteerApplication" asp-controller="Volunteering" class="btn btn-primary ml-auto">
                <i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp; Create New Application
            </a>
        </div>
        <table class="table table-hover product-table">
            <thead>
                <tr>
                    <th scope="col">Orphanage name</th>
                    <th scope="col">Orphanage address</th>
                    <th scope="col">Orphanage Email</th>
                    <th scope="col">Orphanage Contact</th>
                    <th scope="col">Orphanage manager</th>
                    <th scope="col">Description</th>
                    <th scope="col">CreatedDate</th>
                    <th scope="col">Status</th>
                    <th scope="col">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr class="row-@obj.Id">
                        <td class="product-name">@obj.OrphanageName</td>
                        <td>@obj.OrphanageAddress</td>
                        <td>@obj.OrphanageEmail</td>
                        <td>@obj.OrphanageContact</td>
                        <td>@obj.OrphanageManager</td>
                        <td>@obj.Description</td>
                        <td>@obj.VolunteerDate</td>
                        <td>@obj.Status</td>
                        <td>
                            @if(obj.Status == "Pending"){
                                <a asp-controller="Volunteer" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning">
                                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                </a>
                                <button class="btn btn-danger deleteItem" type="button" asp-controller="Volunteer" asp-action="Delete" asp-route-id="@obj.Id">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="row mt-2">
            <div class="colsm-12 text-center">
                <p>You have not submitted an application yet. Click <a asp-action="ViewVolunteeringApplication" asp-controller="Volunteer">here</a> to create one.</p>
            </div>
        </div>
    }
</div>
