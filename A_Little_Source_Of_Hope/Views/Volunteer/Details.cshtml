@model VolunteerApp
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h4 class="sub-title">View Applicantion</h4>
            </div>
            <div class="card-block">
                <div class="row">
                    <div class="col-md-6 offset-3">
                        <div class="d-flex">
                            <div class="d-flex flex-column mr-1 font-weight-bold">
                                <label asp-for="ApplicantFullName"></label><br />
                            </div>
                            <div class="d-flex flex-column font-weight-bold ml-auto">
                                <input asp-for="ApplicantFullName" class="form-control" />
                            </div>
                        </div>
                        <div class="d-flex">
                            <div class="d-flex flex-column mr-1 font-weight-bold">
                                <label asp-for="Description"></label><br />
                            </div>
                            <div class="d-flex flex-column font-weight-bold ml-auto">
                                <input asp-for="Description" class="form-control" />
                            </div>
                        </div>
                        <div class="d-flex">
                            <div class="d-flex flex-column mr-1 font-weight-bold">
                                <label asp-for="OrphanageName"></label><br />
                            </div>
                            <div class="d-flex flex-column font-weight-bold ml-auto">
                                <input asp-for="OrphanageName" class="form-control" />
                            </div>
                        </div>
                        <div class="d-flex">
                            <div class="d-flex flex-column mr-1 font-weight-bold">
                                <label asp-for="VolunteerDate"></label><br />
                            </div>
                            <div class="d-flex flex-column font-weight-bold ml-auto">
                                <input asp-for="VolunteerDate" class="form-control" />
                            </div>
                        </div>
                        <div class="btn-group ml-3 mb-3">
                            @{
                                var parms = new Dictionary<string, string>
                                {
                                    {"Id" , $"{Model.Id}" },
                                    { "userID" , $"{Model.AppUserId}" }
                                };
                            }
                            <a asp-action="Approve" asp-controller="Volunteer" asp-all-route-data="parms" class="btn btn-primary btn-Approve">Approve</a>
                            <a asp-action="Reject" asp-controller="Volunteer" asp-all-route-data="parms" class="btn btn-danger btn-Reject">Reject</a>
                            <a asp-action="Index" asp-controller="Volunteer" class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}