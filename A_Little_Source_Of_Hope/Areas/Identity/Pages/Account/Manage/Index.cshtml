@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row">
    <div class="col-md-8">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-4">
                <img src="~/@Model.ImageSrc" name="Profile_Picture" class="rounded-circle shadow" style="height:150px;width:150px;" />
                <input asp-for="Input.ImageFile" type="file" multiple="false" accept="Image/*" class="d-none ProfileImage">
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.FirstName" class="form-label"></label>
                        <input asp-for="Input.FirstName" type="text" class="form-control" placeholder="Enter first name">
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.LastName" class="form-label"></label>
                        <input asp-for="Input.LastName" type="text" class="form-control" placeholder="Enter last name">
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" type="text" class="form-control" placeholder="Enter email address">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <input asp-for="Input.PhoneNumber" type="text" class="form-control" placeholder="Enter phone number">
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.GenderId" class="form-label"></label>
                        <select asp-for="Input.GenderId" asp-items="Model.GenderList" class="form-control">
                        </select>
                        <span asp-validation-for="Input.GenderId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.AddressLine1" class="form-label"></label>
                        <input asp-for="Input.AddressLine1" type="text" class="form-control">
                        <span asp-validation-for="Input.AddressLine1" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.AddressLine2" class="form-label"></label>
                        <input asp-for="Input.AddressLine2" type="text" class="form-control">
                        <span asp-validation-for="Input.AddressLine2" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.City" class="form-label"></label>
                        <input asp-for="Input.City" type="text" class="form-control">
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.Province" class="form-label"></label>
                        <input asp-for="Input.Province" type="text" class="form-control">
                        <span asp-validation-for="Input.Province" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.PostalCode" class="form-label"></label>
                        <input asp-for="Input.PostalCode" type="text" class="form-control">
                        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 offset-9">
                    <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    $("img[name=Profile_Picture]").on("click", function () {
        $(".ProfileImage").click();
    });
    $(".ProfileImage").on('change', function () {
        const profile = $(this)[0].files[0];
        $("img[name=Profile_Picture]").attr('src', URL.createObjectURL(profile));
    });
    console.log('@ViewData["error"] - @ViewData["Title"]');
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

